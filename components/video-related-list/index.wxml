<!--components/video-related-list/index.wxml-->
<wxs module="format" src="../../utils/formort.wxs"></wxs>
<view class="item">
  <view class="album">
    <image class="image" mode="widthFix" src="{{itemInfo.coverUrl}}"></image>
    <view class="info">
      <text class="count">{{format.formortCount(itemInfo.playTime)}}</text>
    </view>
  </view>
  <view class="content">
    <view class="title">{{itemInfo.title}}</view>
    <view class="nickname">{{itemInfo.creator[0].userName}}</view>
  </view>
</view>
